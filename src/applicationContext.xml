<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- load the properties file -->
    <!-- <context:property-placeholder location-="classpath:sport.properties"/> -->


    <bean id='serviceID' class='com.sriharsha.sprintlearning.serviceClass'/>

    <bean id='classID' class='com.sriharsha.springlearning.userClass'>
            <!-- set up constructor injection -->
            <constructor-arg ref='serviceID'/>

            <!-- set up setter injection -->
            <property name='setterInjector' ref ='serviceID'/>
            
            <!-- injecting the literalValue -->
            <property name='team' value='apple'/>
    </bean>


    <bean id="id" class="org.springframework.beans.factory.config.PropertiesFactoryBean"
          p:location="/WEB-INF/spring.properties"/>

          
    <bean id='helperClass' class='com.sriharsha.springlearning.HelperClass'/>

    <bean id='BaseBallCoach' class='com.sriharsha.springlearning.BaseBallCoach'>
        <!-- <constructor-arg ref='helperClass'/> -->
        <property name='isHeGood' ref='helperClass' />
    </bean>

</beans>